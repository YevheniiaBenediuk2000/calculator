<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/solution_tv"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:layout_above="@id/result_tv"
        android:layout_margin="5dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_tv"
        android:text="@string/btn_zero"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_above="@id/buttons_layout"
        android:layout_margin="5dp"
        />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingVertical="1dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                android:layout_width="62dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#5B6479"
                android:color="@color/white"
                android:text="@string/btn_c"
                android:textSize="17sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ce"
                android:layout_width="62dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#5B6479"
                android:color="@color/white"
                android:text="@string/btn_ce"
                android:textSize="11sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_changing_sign"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#5B6479"
                android:color="@color/white"
                android:text="@string/btn_changing_sign"
                android:textSize="20sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_root"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#5B6479"
                android:color="@color/white"
                android:text="@string/btn_root"
                android:textSize="20sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_division"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#DC861D"
                android:color="@color/white"
                android:text="@string/btn_divide"
                android:textSize="25sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_seven"
                android:layout_width="82dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#333648"
                android:color="@color/white"
                android:text="@string/btn_seven"
                android:textSize="20sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_eight"
                android:layout_width="82dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#333648"
                android:color="@color/white"
                android:text="@string/btn_eight"
                android:textSize="20sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_nine"
                android:layout_width="82dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#333648"
                android:color="@color/white"
                android:text="@string/btn_nine"
                android:textSize="20sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiplication"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#DC861D"
                android:color="@color/white"
                android:text="@string/btn_multiply"
                android:textSize="25sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_four"
                android:layout_width="82dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#333648"
                android:color="@color/white"
                android:text="@string/btn_four"
                android:textSize="20sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_five"
                android:layout_width="82dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#333648"
                android:color="@color/white"
                android:text="@string/btn_five"
                android:textSize="20sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_six"
                android:layout_width="82dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#333648"
                android:color="@color/white"
                android:text="@string/btn_six"
                android:textSize="20sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_subtraction"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#DC861D"
                android:color="@color/white"
                android:text="@string/btn_subtract"
                android:textSize="25sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_one"
                android:layout_width="82dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#333648"
                android:color="@color/white"
                android:text="@string/btn_one"
                android:textSize="20sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_two"
                android:layout_width="82dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#333648"
                android:color="@color/white"
                android:text="@string/btn_two"
                android:textSize="20sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_three"
                android:layout_width="82dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#333648"
                android:color="@color/white"
                android:text="@string/btn_three"
                android:textSize="20sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sum"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#DC861D"
                android:color="@color/white"
                android:text="@string/btn_add"
                android:textSize="25sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_zero"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#333648"
                android:color="@color/white"
                android:text="@string/btn_zero"
                android:textSize="20sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#333648"
                android:color="@color/white"
                android:text="@string/btn_dot"
                android:textSize="20sp"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:backgroundTint="#DC861D"
                android:color="@color/white"
                android:text="@string/btn_equal"
                android:textSize="25sp"

                />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>